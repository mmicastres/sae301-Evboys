{% extends "index.html.twig" %}

{% block section %}
	<form method="post" action="index.php" class="">
		<fieldset>
			<legend>Connexion</legend>

			<div class="form-group row">
				<label for="login" class="col-sm-2 col-form-label col-form-label-sm">Identifiant IUT</label>
				<div class="col-sm-6">
					<input type="text" id="login" class="form-control form-control-sm" name="login" required placeholder="Saisir votre identifiant IUT"/>
				</div>
			</div>

			<div class="form-group row">
				<label for="logpasswdin" class="col-sm-2 col-form-label col-form-label-sm">Mot de passe</label>
				<div class="col-sm-6">
					<input type="password" id="mdp" class="form-control form-control-sm" name="mdp" required placeholder="Saisir votre mot de passe"/>
				</div>
			</div>

			<input type="submit" class="btn btn-primary" name="connexion" value="connexion"/>
		</fieldset>
	</form>
	<p>Pas de compte ? <a class="link-opacity-100" href="?action=register">Inscription</a></p>
{% endblock %}
