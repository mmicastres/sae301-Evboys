{% extends "index.html.twig" %}

{% block section %}
    <div class="container mt-5">
        <table class="table table-hover table-sm table-dark">
            <thead>
                <tr>
                    <th scope="col">Projets</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Catégories</th>
                    <th scope="col">Contexte</th>
                    <th scope="col">Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for pro in pros %}
                    <tr>
                        <td>{{ pro.titre }}</td>
                        <td>{{ pro.utilisateur.prenom }}</td>
                        <td>{{ pro.categorie }}</td>
                        <td>{{ pro.id }}</td>
                        <td>
                            <a href="?action=detail&id={{pro.id_projets}}" class="btn btn-outline-light btn-sm">Détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
