{% extends "index.html.twig" %}

{% block section %}
	<form method="post" action="index.php" class="well" enctype="multipart/form-data">
		<fieldsetclass="form-group">
			<legend>Nouveau projet</legend>
			<div class="form-group row">
				<label for="titre" class="col-sm-2 col-form-label col-form-label-sm">Titre</label>
				<div class="col-sm-10">
					<input type="text" id="titre" class="form-control form-control-sm" name="titre" required placeholder="titre"/>
				</div>
			</div>

			<div class="form-group row">
				<label for="titre" class="col-sm-2 col-form-label col-form-label-sm">Titre</label>
				<div class="col-sm-10">
					<input type="file" name="img" id="img" class="form-control-file" enctype="multipart/form-data" value="">
				</div>
			</div>

			<div class="form-group row">
				<label for="description" class="col-sm-2 col-form-label col-form-label-sm">Description</label>
				<div class="col-sm-10">
					<input type="text" id="description" class="form-control form-control-sm" name="description" required placeholder="description"/>
				</div>
			</div>

			<div class="form-group row">
				<label for="lien_demo" class="col-sm-2 col-form-label col-form-label-sm">Lien d√©mo</label>
				<div class="col-sm-10">
					<input type="text" id="lien_demo" class="form-control form-control-sm" name="lien_demo" required placeholder="lien_demo"/>
				</div>
			</div>

			<div class="form-group row">
				<label for="lien_sources" class="col-sm-2 col-form-label col-form-label-sm">Lien Sources</label>
				<div class="col-sm-10">
					<input type="text" id="lien_sources" class="form-control form-control-sm" name="lien_sources" required placeholder="lien_sources"/>
				</div>
			</div>


			<div class="form-group row">
				<label for="id_contexte" class="col-sm-2 col-form-label col-form-label-sm">Contexte</label>
				<div class="col-sm-10">
					<select type="text" id="id_contexte" class="form-control form-control-sm" name="id_contexte" required placeholder="contexte">
						{% for cont in contextes %}
							<option value="{{cont.id_contexte}}">{{cont.id}}</option>
						{% endfor %}
					</select>
				</div>

				<div class="form-group row">
					<label for="id_categories" class="col-sm-2 col-form-label col-form-label-sm">Categories</label>
					<div class="col-sm-10">
						<select type="text" id="id_categories" class="form-control form-control-sm" name="id_categories" required placeholder="categories">
							{% for cat in categories %}
								<option value="{{cat.id_categories}}">{{cat.categorie}}</option>
							{% endfor %}
						</select>
					</div>
				</div>
			</div>
			<div class="form-group row">
				<label for="id_tags" class="col-sm-2 col-form-label col-form-label-sm">Tags</label>
				<div class="col-sm-10">
					{% for tag in tags %}

						<input type="checkbox" id="{{tag.id_tags}}" name="id_tags[]" value="{{tag.id_tags}}"/>
						<label for="coding">{{tag.nom}}</label>
					{% endfor %}
				</div>
			</div>
		</div>

		<input type="hidden" id="id_utilisateur" name="id_utilisateur" value="{{ id_utilisateur }}"/>

		<input type="submit" class="btn btn-primary " name="ajout" value="Ajouter"/>
	</fieldset>
</form>{% endblock %}
